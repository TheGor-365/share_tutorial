<div class="collapse text-bg-dark" id="navbarHeader">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-md-7 py-4">
        <h4>
          Tutorials Share
        </h4>
        <p class="text-body-secondary">Share wit your expirience with other developers and students</p>
      </div>
      <div class="col-sm-4 offset-md-1 py-4">
        <h4>
          Navigation
        </h4>
        <ul class="list-unstyled">
          <% if user_signed_in? %>
            <li><a href="<%= root_path %>" class="text-white">Manage Tutorials</a></li>
          <% end %>
          <hr>
          <% if user_signed_in? %>
            <li><%= link_to 'Account Settings', edit_user_registration_path, class: "ext-white" %></li>
            <li><%= link_to 'Sign out', destroy_user_session_path, data: { turbo_method: :delete }, class: "text-danger" %></li>
          <% else %>
            <li><%= link_to 'Sign in', new_user_session_path, class: "text-primary" %></li>
            <li><%= link_to 'Sign up', new_user_registration_path, class: "text-success" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="navbar navbar-dark bg-dark shadow-sm">
  <div class="container">
    <% if user_signed_in? %>
      <a href="<%= new_tutorial_path %>" class="navbar-brand d-flex align-items-center">
        <strong>New Tutorial</strong>
      </a>
      <a href="/" class="navbar-brand">
        Tutorials
      </a>
    <% end %>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarHeader"
      aria-controls="navbarHeader"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>
</div>
