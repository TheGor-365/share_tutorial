<p style="color: green"><%= notice %></p>

<h1 class="mb-5 text-center">
  Tutorials
</h1>

<div id="tutorials">
  <% @tutorials.each do |tutorial| %>
    <%= render tutorial %>

    <div class="btn-group mt-3 mb-5">
      <%= link_to "Edit this tutorial", edit_tutorial_path(tutorial), class: "btn btn-sm btn-outline-primary" %>
      <%= link_to "Back to tutorials", tutorials_path, class: "btn btn-sm btn-outline-primary" %>
      <%= button_to "Destroy this tutorial", tutorial, method: :delete, class: "btn btn-sm btn-outline-primary" %>
      <%= link_to "Show this tutorial", tutorial, class: "btn btn-sm btn-outline-primary" %>
    </div>
  <% end %>
</div>

<%= link_to "New tutorial", new_tutorial_path, class: "btn btn-sm btn-outline-primary mt-3" %>
